{
  "env": {
    "node": true,
    "commonjs": true,
    "jest": true,
    "es6": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "max-len": [2, 80, 8],
    "no-multi-str": "off",
    "operator-linebreak": "off",
    "arrow-parens": ["error", "always"]
  }
}
